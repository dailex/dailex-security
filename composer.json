{
    "name": "dailex/dlx-security",
    "type": "library",
    "description": "Security & user administration crate for Dailex.",
    "license": "MPL-2.0",
    "prefer-stable": true,
    "require": {
        "gigablah/silex-oauth": "^2.0@dev",
        "google/recaptcha": "^1.1",
        "pagerfanta/pagerfanta": "^1.0",
        "symfony/config": "^3.0",
        "symfony/form": "^3.0",
        "symfony/security": "^3.0",
        "symfony/serializer": "^3.0",
        "symfony/translation": "^3.0",
        "symfony/validator": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Dlx\\Security\\": "lib/"
        }
    },
    "scripts": {
        "code-sniffer": "phpcs --extensions=php --standard=psr2 lib",
        "code-sniffer-autofix": "phpcbf --standard=psr2 -d tabWidth=4 lib"
    }
}
