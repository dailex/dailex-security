{% extends "@project/layout.html.twig" %}

{% block content %}
<section id="authentication">
    <h1>Login</h1>
    <form method="post" action="{{ path('dlx.security.authenticate') }}">
        {{ form_widget(form) }}
        <button type="submit">Login</button>
        <a href="{{ path('dlx.security.register') }}">Register</a>
    </form>
</section>
{% endblock %}
